@model DmResinas.Models.Products

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Produtos</h1>
<h4 class="display-6">Excluir</h4>
<hr />
<h3 class="text-danger">Confirma a exclus√£o desse Filme?</h3>
<div class="row" enctype="multipart/form-data">
    <div class="col-md-4 col-sm-12 col-xxl-3">
        <div class="form-group">
            <label asp-for="Images" class="form-label"></label>
            <img id="PreviewImage" src="@Model.Images" class="img-fluid w-100">
        </div>
    </div>
    <div class="col-md-8 col-sm-12 col-xxl-9">
        <div class="col-12 mb-2">
            <label asp-for="ProdName" class="form-label"></label>
            <input asp-for="ProdName" class="form-control" disabled/>
        </div>
        <div class="col-12 mb-2">
            <label asp-for="ProdQtd" class="form-label"></label>
            <input asp-for="ProdQtd" class="form-control" disabled/>
        </div>
        <div class="col-12 mb-2">
            <label asp-for="ProdDescription" class="form-label"></label>
            <textarea asp-for="ProdDescription" class="form-control" rows="3" disabled></textarea>
        </div>
        <div class="row mb-2">
            <div class="col-md-4">
                <label asp-for="ProdPrice" class="form-label"></label>
                <input asp-for="ProdPrice" class="form-control" disabled/>
        </div>
        <div class="btn-group my-2">
            @foreach (ProductCategories ProductCategories in Model.Categories)
            {
                <h2><span class="badge bg-secondary me-2">@ProductCategories.Categories.CategorieName</span></h2>
            }
        </div>
    </div>
    <form asp-action="Delete" class="col-12 mt-4">
        <input type="hidden" asp-for="ProdId" />
        <button type="submit" class="btn btn-danger me-3"><i class="bi bi-trash-fill"></i> Excluir</button>
        <a asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
    </form>
</div>
