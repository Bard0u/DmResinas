@model DmResinas.Models.Produto
@{
    ViewData["Title"] = "Produto";
}

<div class="album py-5">
    <div class="containerTudoProduto">
        <section class="containerPrincipalProduto">
            @foreach (ProdutoFoto ProdutoFotos in Model.Fotos)
            {
                <img class="imagemProduto" src="@ProdutoFotos.Produto.Fotos.Select(f => f.ArquivoFoto).Single()"
                    alt="Colorlib Template">
                <div class="overlay"></div>
            }
            <div class="containerInfoPrincipalProduto">
                <h1>@Model.Nome</h1>
                <p class="precoProduto">R$@Model.Preco</p>
                <p class="descricaoProduto">@Model.Descricao</p>
                <div class="containerTagsProduto">
                    @foreach (ProdutoCategoria ProdutoCategorias in Model.Categorias)
                    {
                        <h2><span class="badge bg-secondary me-2">@ProdutoCategorias.Categoria.Nome</span></h2>
                    }
                </div>
                <a href="https://contate.me/dmresinas">
                    <button class="botaoComprarProduto">
                        <p>Comprar</p>
                        <img class="zapLogoProduto" src="~/img/zaplogo.png" />
                    </button>
                </a>
            </div>
        </section>
    </div>
</div>