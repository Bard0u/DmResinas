@model List<DmResinas.Models.Produto>
@{
    ViewData["Title"] = "Catálogo";
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/style.css">

  </head>
  <body class="goto-here">
	

    <div class="hero-wrap hero-bread d-flex justify-content-center" style="background-color: #f5f5f5;">
		<img src="../images/catalogo.png" style="width: 70%; height: 70%">
	</div>

	<header class="containerTopoCatalogo">
		<div class="tituloCatalogo">
			<img class="flor1" src="https://cdn.discordapp.com/attachments/826872414147313764/1165147408041255002/image.png?ex=6545cb15&is=65335615&hm=f02c2435a8b6ff3c9ca96b40e3034e2266b5e4ab9533a6594650e1eabdff71aa&" width="30" height="30"/>
			<h1> CATÁLOGO</h1>
			<img src="https://cdn.discordapp.com/attachments/826872414147313764/1165147408041255002/image.png?ex=6545cb15&is=65335615&hm=f02c2435a8b6ff3c9ca96b40e3034e2266b5e4ab9533a6594650e1eabdff71aa&" width="30" height="30"/>
		</div>
		<h2>Encontre o produto que está procurando.</h2>
		<form id="form"> 
			<input type="search" id="query" name="q" placeholder="Search...">
			<button>Search</button>
		</form>
	</header>

    <section class="ftco-section">
    	<div class="container">
    		<div class="row justify-content-center">
    			<div class="col-md-10 mb-5 text-center">
    				<ul class="product-category">
    					<li><a href="#" style="background-color: #D7911A; color: white">Todos</a></li>
    					<li><a href="#">Chaveiros</a></li>
    					<li><a href="#">Marca-Páginas</a></li>
    					<li><a href="#">Placas</a></li>
    					<li><a href="#">Outros...</a></li>
    				</ul>
    			</div>
    		</div>
    		<div class="row d-flex justify-content-center">
    			<div class="col-md-9 col-lg-3 ftco-animate">
    				<div class="product">
    					<a href="#" class="img-prod"><img class="img-fluid" src="~/images/l.png" alt="Colorlib Template">
    						<div class="overlay"></div>
    					</a>
						<div class="text py-3 pb-4 px-3 text-center">
    						<h3><a href="#">Letra L</a></h3>
    						<div class="d-flex">
    							<div class="pricing">
		    						<p class="price"><span>R$20,00</span></p>
		    					</div>
	    					</div>
    					</div>
    				</div>
    			</div>
    		</div>
    </section>

