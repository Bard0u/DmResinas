﻿<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DmResinas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DmResinas.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <div class="d-flex">
            <div id="retangulo1"></div>
            <div id="retangulo2"></div>
            <div id="retangulo3"></div>
            <div id="retangulo4"></div>
            <div id="retangulo5"></div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white bottom-border box-shadow navbar-custom>
            <div class=" container-fluid>
            <img src="img/logodmresinas.png" alt="Logotipo" width="100" height="100" style="margin-left: 15px;">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
                style="padding-left: 10px;"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex ms-auto d-flex flex-row-reverse">
                <ul class="navbar-nav" style="font-family: 'Inter'; font-size: 13px; margin-right: 50px">
                    <li class="nav-item" style="margin-right: 40px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">INÍCIO</a>
                    </li>
                    <li class="nav-item" style="margin-right: 40px;">
                        <a class="nav-link text-dark" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Catalogo">CATÁLOGO</a>
                    </li>
                    <li class="nav-item" style="margin-right: 40px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">SOBRE</a>
                    </li>
                    <li class="nav-item" style="margin-right: 40px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contato">CONTATO</a>
                    </li>
                    <li class="nav-item" style="margin-right: 40px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dicas">DICAS</a>
                    </li>
                </ul>
            </div>
            <partial name="_LoginPartial"></partial>
            </div>
        </nav>
    </header>
        <div class="row">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <div class="d-flex">
        <div id="retangulo1"></div>
        <div id="retangulo2"></div>
        <div id="retangulo3"></div>
        <div id="retangulo4"></div>
        <div id="retangulo5"></div>
    </div>

    <footer>
        <div class="container" style="font-family: 'Italiana'; text-align: center; font-size: 40px; color: #C58A3E;">
            DM Resinas
        </div>

        <div class="container-footer">
            <div class="row-footer">
                <div class="footer-col">
                    <h1 style="font-family: 'Roboto'; color: black; letter-spacing: 3px;">ATENDIMENTO</h1>
                    <ul class="justify-content-center d-flex" style="list-style-type: none;">
                        <li>
                            <i class="bi bi-whatsapp"></i>
                        </li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h1 style="font-family: 'Roboto'; color: black; letter-spacing: 3px;">INSTITUCIONAL</h1>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Sobre" style="font-family: 'Roboto'; color: black; text-decoration: none">Sobre Nós</a></li>
                        <li><a asp-controller="Home" asp-action="Index" style="font-family: 'Roboto'; color: black; text-decoration: none">Novidades</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h1 style="font-family: 'Roboto'; color: black; letter-spacing: 3px;">FUNCIONAMENTO</h1>
                    <ul>
                        <li><a style="font-family: 'Roboto'; color: black; text-decoration: none">Segunda a sexta das 00h às 00h</a></li>
                        <li><a style="font-family: 'Roboto'; color: black; text-decoration: none">Prazo de resposta de 24 horas úteis</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h1 style="font-family: 'Roboto'; color: black; letter-spacing: 3px;">DÚVIDAS</h1>
                    <ul>
                        <li><a style="font-family: 'Roboto'; color: black; text-decoration: none">Dúvidas frequentes</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
