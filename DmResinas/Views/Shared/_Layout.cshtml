﻿<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DmResinas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DmResinas.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white bottom-border box-shadow mb-3 navbar-custom>
            <div class="container-fluid">
                <img src="img/logodmresinas.png" alt="Logotipo" width="80" height="80" style="margin-left: 15px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="padding-left: 10px;"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-right d-flex">
                    <ul class="navbar-nav flex-grow-1" style="font-family: 'Inter'; font-size: 13px; text-align: right">
                        <li class="nav-item" style="margin-right: 40px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">INÍCIO</a>
                        </li>
                        <li class="nav-item" style="margin-right: 40px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"asp-action="Catalogo">CATÁLOGO</a>
                        </li>
                        <li class="nav-item" style="margin-right: 40px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"asp-action="Sobre">SOBRE</a>
                        </li>
                        <li class="nav-item" style="margin-right: 40px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"asp-action="Contato">CONTATO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"asp-action="Dicas">DICAS</a>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial"></partial>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DmResinas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" ></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
